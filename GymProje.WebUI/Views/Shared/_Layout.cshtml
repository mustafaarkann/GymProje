@using Microsoft.AspNetCore.Identity
@using GymProje.Entity.Entities
@inject UserManager<AppUser> UserManager

@{
    string userDisplayName = "";
    if (User.Identity.IsAuthenticated)
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            userDisplayName = user.FirstName;
        }
    }
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gym Proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymProje.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        .navbar-custom {
            background-color: #ffffff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 1px;
            color: #0d6efd !important;
        }

        .nav-link {
            font-weight: 500;
            color: #555 !important;
            transition: all 0.3s ease;
            margin: 0 5px;
            position: relative;
        }

            .nav-link:hover {
                color: #0d6efd !important;
            }

            .nav-link::after {
                content: '';
                display: block;
                width: 0;
                height: 2px;
                background: #0d6efd;
                transition: width .3s;
                position: absolute;
                bottom: 0;
                left: 0;
            }

            .nav-link:hover::after {
                width: 100%;
            }

        .user-badge {
            background-color: #f8f9fa;
            padding: 8px 15px;
            border-radius: 30px;
            border: 1px solid #e9ecef;
            color: #333;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-logout {
            border-radius: 20px;
            padding: 6px 20px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-logout:hover {
                background-color: #dc3545;
                color: white;
                transform: translateY(-2px);
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">

    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-dumbbell me-2"></i>GYM <span class="text-dark">PROJE</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="fas fa-bars"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Trainer" asp-action="Index">
                                    <i class="fas fa-plus-circle text-success me-1"></i> Randevu Al
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Appointment/MyAppointments">
                                    <i class="fas fa-calendar-check text-primary me-1"></i> Randevularım
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/AI/Index">
                                    <i class="fas fa-magic text-warning me-1"></i> AI Koç
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item me-2">
                                    <a class="btn btn-dark btn-sm rounded-pill px-3" href="/Admin">
                                        <i class="fas fa-user-shield me-1"></i> Panel
                                    </a>
                                </li>
                            }

                            <li class="nav-item me-2">
                                <div class="user-badge">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 30px; height: 30px;">
                                        <i class="fas fa-user small"></i>
                                    </div>
                                    <span>@userDisplayName</span>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-logout btn-sm" href="/Account/Logout">Çıkış</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link fw-bold text-dark" href="/Account/Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm" href="/Account/Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div style="margin-top: 80px;"></div>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3 pt-4">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm border-0" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-top mt-auto py-4">
        <div class="container text-center">
            <div class="mb-3">
                <span class="text-primary fw-bold fs-5"><i class="fas fa-dumbbell"></i> GYM PROJE</span>
            </div>
            <p class="text-muted small mb-0">
                &copy; 2025 - Web Programlama Dersi - Tüm Hakları Saklıdır.
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>