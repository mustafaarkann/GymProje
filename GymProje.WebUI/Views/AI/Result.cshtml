@model GymProje.Entity.Entities.AIWorkoutPlan

@{
    ViewData["Title"] = "Senin Programın";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                <h2 class="mt-2">Programın Hazır!</h2>
            </div>

            <div class="card shadow border-0">
                <div class="card-body p-5">
                    @Html.Raw(Model.AIResponse)
                </div>
                <div class="card-footer bg-white text-center">
                    <a href="/" class="btn btn-outline-primary">Ana Sayfaya Dön</a>
                    <a href="/AI/Index" class="btn btn-outline-dark">Yeni Sorgu Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>