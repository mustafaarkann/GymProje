@model IEnumerable<GymProje.Entity.Entities.Service>

@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
            <i class="fas fa-list me-2"></i>Hizmet Tanımları
        </h6>
        <a asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
            <i class="fas fa-plus me-1"></i> Yeni Hizmet Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 25%;">Hizmet Adı</th>
                        <th>Açıklama</th>
                        <th style="width: 180px;" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-primary">@item.Name</td>
                            <td class="text-muted">@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-dark" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm"
                                       title="Sil"
                                       onclick="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                <i class="fas fa-info-circle fa-2x mb-2 d-block"></i>
                                Kayıtlı hizmet bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>