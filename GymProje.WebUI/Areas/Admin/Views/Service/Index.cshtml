@model IEnumerable<GymProje.Entity.Entities.Service>

@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Hizmet Tanımları</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Hizmet Ekle
        </a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Hizmet Adı</th>
                    <th>Açıklama</th>
                    <th style="width: 150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Name</strong></td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">Kayıtlı hizmet bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>