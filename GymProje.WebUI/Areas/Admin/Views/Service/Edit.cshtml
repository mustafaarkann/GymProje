@model GymProje.Entity.Entities.Service

@{
    ViewData["Title"] = "Hizmet Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3 mt-4">
            <div class="card-header bg-warning text-dark py-3">
                <h5 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i>Hizmet Düzenle</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary">Hizmet Adı</label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary px-4">İptal</a>
                        <button type="submit" class="btn btn-warning px-4 fw-bold">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>