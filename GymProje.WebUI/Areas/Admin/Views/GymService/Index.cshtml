@model IEnumerable<GymProje.Entity.Entities.GymService>

@{
    ViewData["Title"] = "Fiyat Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Salon Hizmet & Fiyatları</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Fiyat Tanımla
        </a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Salon</th>
                    <th>Hizmet</th>
                    <th>Süre (Dk)</th>
                    <th>Ücret (TL)</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Gym.Name</td>
                        <td><span class="badge bg-info text-dark">@item.Service.Name</span></td>
                        <td>@item.DurationMinutes dk</td>
                        <td class="text-success fw-bold">@item.Price.ToString("C2")</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>