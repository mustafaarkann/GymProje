@model GymProje.Entity.Entities.GymService

@{
    ViewData["Title"] = "Fiyat Tanımla";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Hizmet Fiyatlandırması</h5>
            </div>
            <div class="card-body">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label class="form-label">Hangi Salon?</label>
                        <select asp-for="GymId" class="form-select" asp-items="ViewBag.Gyms"></select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hangi Hizmet?</label>
                        <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.Services"></select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Süre (Dakika)</label>
                            <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="Örn: 60" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ücret (TL)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Örn: 500" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-info text-white">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>