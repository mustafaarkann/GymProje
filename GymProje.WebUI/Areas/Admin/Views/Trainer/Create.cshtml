@model GymProje.Entity.Entities.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Yeni Eğitmen Kaydı</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ad Soyad</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Uzmanlık Alanı</label>
                            <input asp-for="Specialty" class="form-control" placeholder="Örn: Fitness, Pilates" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Çalışacağı Salon</label>
                        <select asp-for="GymId" class="form-select" asp-items="ViewBag.Gyms">
                            <option value="">-- Bir Salon Seçiniz --</option>
                        </select>
                        <span asp-validation-for="GymId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Profil Fotoğrafı</label>
                        <input type="file" name="file" class="form-control" accept="image/*" />
                        <div class="form-text">Jpg veya Png formatında yükleyiniz.</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">Kaydet</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>