@model GymProje.Entity.Entities.Gym

@{
    ViewData["Title"] = "Salon Düzenle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-3 mt-4">

            <div class="card-header bg-warning text-dark py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="fas fa-edit me-2"></i>Spor Salonu Bilgilerini Düzenle
                </h5>
            </div>

            <div class="card-body p-4">
                <form asp-action="Edit" method="post">

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary">
                            <i class="fas fa-building me-2"></i>Salon Adı
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary">
                            <i class="fas fa-map-marker-alt me-2"></i>Adres
                        </label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold text-secondary">
                                <i class="fas fa-clock me-2"></i>Açılış Saati
                            </label>
                            <input asp-for="OpeningTime" type="time" class="form-control form-control-lg" />
                            <span asp-validation-for="OpeningTime" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label class="form-label fw-bold text-secondary">
                                <i class="fas fa-history me-2"></i>Kapanış Saati
                            </label>
                            <input asp-for="ClosingTime" type="time" class="form-control form-control-lg" />
                            <span asp-validation-for="ClosingTime" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr class="my-4 text-muted" />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fas fa-arrow-left me-1"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-warning px-4 fw-bold">
                            <i class="fas fa-save me-1"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>