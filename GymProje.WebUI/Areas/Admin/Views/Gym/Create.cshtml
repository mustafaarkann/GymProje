@model GymProje.Entity.Entities.Gym

@{
    ViewData["Title"] = "Yeni Salon Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Yeni Spor Salonu Tanımla</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label class="form-label">Salon Adı</label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Serdivan Merkez Şube" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Adres</label>
                        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Açılış Saati</label>
                            <input asp-for="OpeningTime" type="time" class="form-control" />
                            <span asp-validation-for="OpeningTime" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Kapanış Saati</label>
                            <input asp-for="ClosingTime" type="time" class="form-control" />
                            <span asp-validation-for="ClosingTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>