@model IEnumerable<GymProje.Entity.Entities.Gym>

@{
    ViewData["Title"] = "Salon Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Spor Salonları</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Salon Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>Salon Adı</th>
                        <th>Adres</th>
                        <th>Açılış</th>
                        <th>Kapanış</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td>@item.Address</td>
                            <td>@item.OpeningTime.ToString(@"hh\:mm")</td>
                            <td>@item.ClosingTime.ToString(@"hh\:mm")</td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Bu salonu silmek istediğinize emin misiniz?');">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Henüz kayıtlı bir salon yok.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>